{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "create-block/product-banner",
  "version": "1.0.0",
  "title": "Product Banner",
  "category": "woocommerce",
  "icon": "megaphone",
  "description": "A beautiful banner block for showcasing WooCommerce products",
  "keywords": [
    "product",
    "banner",
    "woocommerce",
    "promotion"
  ],
  "textdomain": "neve",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "attributes": {
    "productId": {
      "type": "number",
      "default": 0
    },
    "title": {
      "type": "string",
      "default": ""
    },
    "text": {
      "type": "string",
      "default": ""
    },
    "imageId": {
      "type": "number",
      "default": 0
    },
    "imageUrl": {
      "type": "string",
      "default": ""
    },
    "useProductImage": {
      "type": "boolean",
      "default": true
    }
  },
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ],
    "spacing": {
      "margin": true,
      "padding": true
    }
  }
}